<% if (!contact) { %>

    <div class="alert alert-danger" role="alert">
        Contact tidak ditemukan <a href="/contact" class="alert-link">Kembali</a>
    </div>



<% }else{ %>
    <div class="card mb-3" style="max-width: 540px;">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="img/profile.png" alt="...">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= contact.name %></h5>
                <ul class="list-group list-group-flush">
      
                    <li class="list-group-item"><%=contact.nohp %></li>
                    <li class="list-group-item"><%=contact.email %></li>
                </ul>
                <a href="/contact" class="card-text"><small class="text-muted">kembali</small></a>
                <a href="/contact/delete/<%=contact.name%>" onclick="return confirm('Anda yakin mau menghapus user ini ?')">
                    <i class="bi bi-x-circle-fill" style="color: rgb(175, 32, 32);"></i>
                        <a href="/contact/edit/<%=contact.name%>">Edit</i>
                </a>
            </div>
        </div>
    </div>
</div>
<%} %>
